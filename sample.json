{
    "name": "IITA_Casava",
    "workDir": "work/iita",
    "templateDir": "data/templates",
    "weatherDir":"data/weathers",
    "threads": 8,
    "sample": 3,
    "default_setup": {
        "template": "NGSP0000.CSX",
        "sites": "xy_from_vector::data/shapes/unity_sites.shp",
        "soilFiles": ["data/base/HC.SOL"],
        "startYear": 1984,
        "nyers": 32,
        "initialN": 5,
        "fractionalAW": 0.25,
        "icrt": 5,
        "icres": 10,
        "icren": 0.8,
        "id_soil": "lookup_hc27::raster::data/rasters/unity_hc27.tif",
        "wsta": "lookup_wth::SSUD::vector::data/shapes/unity_sites.shp::CellID",
        "ic_layers":"generate_ic_layers::$id_soil"
    },
    "dssat": {
        "executable": "~/dssat/dscsm047"
    },
    "analysis": {
        "default_analysis" : {
            "timeseries": {"Harvest Date": "HDAT"},
            "timestep": "Y",
            "processing": [
                {"Production (kg)": "HWAM: scale during collection by default"},
                {"Production (t)": "Production (kg):scale before output by 0.001 rounded"},
                {"Harvested Area (ha)": "SCALE: round before output"},
                {"Production (t)": "Production (t): drop0 before output"}
            ],
            "output": ["Production (t)", "Harvested Area (ha)"]
        }
    },
    "runs": [
        {
            "name": "cassava",
            "harvestArea": "raster::data/rasters/unity_spam_harvest_sorghum.tif",
            "scale_by": "$harvestArea",
            "analysis_outfile": "outputs/unity/sorghum_yearly.csv"
        }
    ]
}
